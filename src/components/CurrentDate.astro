---

const url = new URL(Astro.request.url);
const dateQuery = url.searchParams.get('date');


const splitedDate = dateQuery?.split('-');
const now = splitedDate ? new Date(splitedDate[0], splitedDate[1] - 1, splitedDate[2]) : new Date();

const dateStr = now.toLocaleDateString('en-US', {month: 'long', weekday:'short', day: 'numeric'});
const dateArr = dateStr.split(' ');

const weekday = dateArr[0].split(',')[0];
const month = dateArr[1];
const date = dateArr[2];
---
<div class="md:w-fit flex flex-col gap-2 md:gap-6">
  <p class="text-xl md:text-3xl font-medium">{month}</p>
  <div class="flex flex-col items-center justify-center">
      <span class="text-3xl md:text-5xl">{date}</span>
      <span class="text-sm md:text-lg">{weekday.toUpperCase()}</span>
  </div>
</div>
